{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["ES2020","DOM"],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": ".",
      "baseUrl": ".",
      "noUnusedLocals": true,
      "noUnusedParameters": true,  
      "types": [
          "node"
      ],
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "./",
      "./test/"
  ],
  "exclude": [
      "./radata",
      "./fireDB",
      "./node_modules",
      "./test",
  ]
}